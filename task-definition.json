{
    "containerDefinitions": [ 
       { 
          "essential": true,
          "name": "travel-plan-api",
          "portMappings": [ 
             { 
                "containerPort": 8001,
                "hostPort": 8001,
                "protocol": "tcp"
             }
          ],
         "mountPoints": [
           {
             "containerPath": "/log",
             "sourceVolume": "./log"
           }
         ],
         "logConfiguration":{
           "logDriver":"awslogs",
           "options":{
             "awslogs-group":"/ecs/traval-plan-api-main",
             "awslogs-region":"us-east-1",
             "awslogs-stream-prefix":"ecs/travel-plan-api-main"
           }
         }
       },
      {
        "essential": true,
        "name": "mongo",
        "image": "docker.io/mongo:4.0",
        "portMappings": [
          {
            "containerPort": 27017,
            "hostPort": 27017,
            "protocol": "tcp"
          }
        ],
        "command": [
          "--smallfiles"
        ],
        "mountPoints": [
          {
            "containerPath": "/data/db",
            "sourceVolume": "/opt/mongodb"
          }
        ]
      },
      {
        "command": [
          "redis-server"
        ],
        "essential": true,
        "image": "docker.io/redis:5.0.5",
        "mountPoints": [
          {
            "containerPath": "/data",
            "sourceVolume": "/opt/redis/data"
          },
          {
            "containerPath": "/logs",
            "sourceVolume": "/opt/redis/logs"
          }
        ],
        "name": "redis",
        "portMappings": [
          {
            "containerPort": 6379,
            "hostPort": 6379
          }
        ]
      },
      {
        "command": [
          "/bin/bash",
          "-c",
          "bin/apply-config-from-env.py conf/standalone.conf && bin/pulsar standalone"
        ],
        "environment": [
          {
            "name": "BOOKIE_MEM",
            "value": "\" -Xms512m -Xmx512m -XX:MaxDirectMemorySize=1g\""
          }
        ],
        "essential": true,
        "image": "docker.io/apachepulsar/pulsar",
        "mountPoints": [
          {
            "containerPath": "/data",
            "sourceVolume": "/opt/pulsar/data"
          },
          {
            "containerPath": "/conf",
            "sourceVolume": "/opt/pulsar/conf"
          }
        ],
        "name": "pulsar",
        "portMappings": [
          {
            "containerPort": 8080,
            "hostPort": 8080
          },
          {
            "containerPort": 6650,
            "hostPort": 6650
          }
        ]
      }

    ],

    "cpu": "256",
    "executionRoleArn": "arn:aws:iam::356567610291:role/ecsTaskExecutionRole",
    "family": "task-def-travel-plan-api-main",
    "memory": "512",
    "networkMode": "awsvpc",
    "requiresCompatibilities": [ 
        "FARGATE" 
     ],
    "volumes": [
      {
        "name": "efs-volume",
        "efsVolumeConfiguration": {
          "fileSystemId": "fs-b09bcf32",
          "rootDirectory": "/data"
        }
      }
    ]
 }